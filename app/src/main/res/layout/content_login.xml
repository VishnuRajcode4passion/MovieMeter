<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.machine2.moviemeter.LoginActivity"
    tools:showIn="@layout/activity_login">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="50dp"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        </android.support.v7.widget.CardView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignTop="@+id/card_view"
        android:layout_alignEnd="@+id/card_view"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="#000000"
        android:hint="Username"
        android:layout_alignBottom="@+id/card_view" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="#ffffff"
        android:src="@drawable/avatar"
        android:layout_alignBottom="@+id/card_view"
        android:layout_alignStart="@+id/card_view"
        android:layout_alignTop="@+id/card_view" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="50dp"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/card_view"
        android:layout_centerHorizontal="true">

    </android.support.v7.widget.CardView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:textColor="#000000"
        android:hint="**********"
        android:layout_alignBottom="@+id/card_view2"
        android:layout_alignEnd="@+id/editText4"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="#ffffff"
        android:src="@drawable/lock"
        android:layout_alignTop="@+id/card_view2"
        android:layout_alignStart="@+id/card_view2"
        android:layout_alignBottom="@+id/card_view2" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/login"
        android:layout_below="@+id/card_view2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/textView7"
        android:layout_above="@+id/editText4"
        android:layout_alignStart="@+id/card_view"
        android:layout_marginBottom="31dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/fb"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/card_view2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/google"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with facebook"
        android:id="@+id/textView8"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignStart="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with google+"
        android:id="@+id/textView9"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />


</RelativeLayout>
